    "eslint": "^8.55.0",
    "execa": "8.0.1",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "kolorist": "^1.8.0",
    "lint-staged": "^15.2.0",
    "minimist": "^1.2.8",
    "prettier": "^3.1.0",
    "prompts": "^2.4.2",
    "semver": "^7.5.4",
    "tsx": "^3.14.0",
    "typescript": "^5.3.3"
