{
  "*.{js,jsx,ts,tsx}": [
    "prettier --write",
    "eslint --fix"
  ],
  "{!(package)*.json,*.code-snippets,.!(browserslist|npm)*rc}": [
    "prettier --write--parser json"
  ],
  "package.json": [
    "prettier --write"
  ],
  "*.{css,scss,pcss,html}": [
    "prettier --write",
    "stylelint --fix"
  ],
  "*.md": [
    "prettier --write"
  ],
  "*.vue": [
    "prettier --write",
    "eslint --fix",
    "stylelint --fix"
  ]
}
